pipeline {
    agent any

    environment {
        NODE_ENV = 'test'
        VERCEL_TOKEN = credentials('VERCEL_TOKEN')
    }

    options {
        skipDefaultCheckout(true)
    }

    stages {
        stage('Clean up code') {
            steps {
                cleanWs()
            }   
        }

        stage('Checkout using SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:22.11.0' // ⬅️ full image for better dependency support
                    args '-u root'
                    reuseNode true
                }
            }
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    sh '''
                        npm ci || npm install
                        npm run build
                        ls -l
                    '''
                }
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:22.11.0'
                    args '-u root'
                    reuseNode true
                }
            }
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    sh 'npm run test'
                }
            }
        }

        stage('Deploy') {
            agent {
                docker {
                    image 'node:22.11.0'
                    args '-u root'
                    reuseNode true
                }
            }
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    sh '''
                        npm install -g vercel
                        vercel --prod --token=$VERCEL_TOKEN --confirm --name=cicdproject
                    '''
                }
            }
        }
    }
}
